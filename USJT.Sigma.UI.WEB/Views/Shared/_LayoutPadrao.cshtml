<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!--Importamos os scripts do JQuery-->
    <script src="~/scripts/jquery-3.1.0.min.js"></script>
    <script src="~/scripts/jquery.maskedinput.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/scripts/bootbox.min.js"></script>

    <!--Importamos os scripts do Bootstrap-->
    <script src="~/scripts/bootstrap.min.js"></script>

    <!--Importamos as bibliotecas de CSS-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/icon.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

    <script src="~/scripts/jquery-ui-1.12.0.min.js"></script>

    <link href="~/Content/mega-menu.css" rel="stylesheet" />
    <script src="~/scripts/mega-menu.js"></script>

</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-default">
                <div class="navbar-header">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".js-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">SIGMA</a>
                </div>

                <div class="collapse navbar-collapse js-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown mega-dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Assuntos<span class="glyphicon glyphicon-chevron-down pull-right"></span></a>
                            <ul class="dropdown-menu mega-dropdown-menu row">
                                <li class="col-sm-3">
                                    <ul>
                                        <li class="dropdown-header">Acompanhamento</li>
                                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                            <div class="carousel-inner">
                                                <div class="item active">
                                                    <a href="~/Aluno/Atividades"><img src="~/Content/img/menu/consulta-atividade.jpg" class="img-responsive" alt="product 1"></a>
                                                    <h4><small>Consultar Atividades</small></h4>
                                                </div>
                                                <div class="item">
                                                    <a href="~/Aluno/Progresso"><img src="~/Content/img/menu/progresso.jpg" class="img-responsive" alt="product 2"></a>
                                                    <h4><small>Seu Progresso</small></h4>
                                                </div>
                                                <div class="item">
                                                    <a href="~/SubDistribuicao/ApresentacaoPontosOuValores"><img src="~/Content/img/menu/poligono-de-frequencia.jpg" class="img-responsive" alt="product 3"></a>
                                                    <h4><small>Distribuição de Frequência</small></h4>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.carousel -->
                                        <li class="divider"></li>
                                        <li><a href="~/Topico/Topicos">Tópicos<span class="glyphicon glyphicon-chevron-right pull-right"></span></a></li>
                                        <li><a href="~/Aluno/Progresso">Acompanhar Progresso<span class="glyphicon glyphicon-chevron-right pull-right"></span></a></li>
                                        <li><a href="~/Aluno/Atividades">Acompanhar Atividades<span class="glyphicon glyphicon-chevron-right pull-right"></span></a></li>
                                        <li><a href="~/Topico/GeraCertificado">Certificado<span class="glyphicon glyphicon-chevron-right pull-right"></span></a></li>
                                    </ul>
                                </li>
                                <li class="col-sm-3">
                                    <ul>
                                        <li class="dropdown-header">Tópicos</li>
                                        <li><a href="~/SubDistribuicao/IntroducaoDistribuicao">Distribuição</a></li>
                                        <li><a href="~/SubMedidasTendencia/IntroducaoMedidasTendencia">Medidas de Tendência Central</a></li>
                                        <li><a href="#">Medidas de Dispersão</a></li>
                                        <li><a href="#">Amostragem</a></li>
                                        <li class="divider"></li>
                                        <li class="dropdown-header">Distribuição</li>
                                        <li><a href="~/SubDistribuicao/IntroducaoDistribuicao">Introdução</a></li>
                                        <li><a href="~/SubDistribuicao/PontosOuValores">Pontos ou valores</a></li>
                                        <li><a href="~/SubDistribuicao/ClassesOuIntervalos">Classes ou intervalos</a></li>
                                        <li><a href="~/SubDistribuicao/FrequenciaRelativaPercentual">Frequência relativa ou percentual</a></li>
                                        <li><a href="~/SubDistribuicao/FrequenciaAcumuladaSimplesAbsoluta">Acumulada simples ou absoluta</a></li>
                                        <li><a href="~/SubDistribuicao/FrequenciaAcumuladaRelativaPercentual">Acumulada relativa ou percentual</a></li>
                                        <li><a href="~/SubDistribuicao/ApresentacaoPontosOuValores">Frequências por pontos ou valores</a></li>
                                        <li><a href="~/SubDistribuicao/ApresentacaoClassesOuIntervalos">Frequências por classes ou intervalos</a></li>
                                    </ul>
                                </li>
                                <li class="col-sm-3">
                                    <ul>
                                        <li class="dropdown-header">Medidas de Tendência Central</li>
                                        <li><a href="#">Introdução</a></li>
                                        <li><a href="#">Média simples</a></li>
                                        <li><a href="#">Média ponderada</a></li>
                                        <li><a href="#">Moda</a></li>
                                        <li><a href="#">Mediana</a></li>
                                        <li class="dropdown-header">Medidas de Dispersão</li>
                                        <li><a href="#">Dispersão</a></li>
                                        <li><a href="#">Assimetria</a></li>
                                        <li><a href="#">Curtose</a></li>
                                        <li class="divider"></li>
                                    </ul>
                                </li>
                                <li class="col-sm-3">
                                    <ul>
                                        <li class="dropdown-header">Amostragem e Estimadores</li>
                                        <li><a href="#">Importância da amostragem</a></li>
                                        <li><a href="#">Conceitos fundamentais</a></li>
                                        <li><a href="#">Aleatória simples</a></li>
                                        <li><a href="#">Aleatória estratificada</a></li>
                                        <li><a href="#">Conglomerado</a></li>
                                        <li><a href="#">Sistemática</a></li>
                                        <li class="divider"></li>
                                        <form class="form" role="form">
                                            <a href="~/Aluno/logout" class="btn btn-primary btn-block" style="color: #ffffff">Sair</a>
                                        </form>
                                    </ul>
                                </li>
                            </ul>

                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <section>
        @if (TempData["Mensagem"] != null)
            {
            @Html.Partial("_PartialMensagem")
        }
    </section>

    <section>
        @RenderBody()
    </section>

    <footer>
        <nav class="navbar navbar-default navbar-fixed-bottom">
            <div class="container text-center text-uppercase">
                <p>&copy; Sistema de Ensino<strong> Sigma</strong></p>
            </div>
        </nav>
    </footer>
    
</body>
</html>