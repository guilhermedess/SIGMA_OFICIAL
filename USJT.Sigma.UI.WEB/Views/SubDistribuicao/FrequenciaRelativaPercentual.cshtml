        </p>
        <p>
            <strong>@Model.atividades[i].DescricaoPergunta</strong>
        </p>
    </div>

    <script>
        $(document).ready(function () {
            $("#divCamposAtv" + @i).append($("#camposAtividade"));
        });
    </script>
}

