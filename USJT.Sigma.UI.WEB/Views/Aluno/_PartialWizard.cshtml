                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12">

                                    @{
                                        foreach (var todasAtividades in Model.todasAtividades)
                                        {
                                            <div class="col-lg-3 col-md-3 col-sm-3">
                                                <div class="panel-group">
                                                    <div id="@todasAtividades.IdAtividade" class="panel panel-red">
                                                        <div class="panel-heading" title="@todasAtividades.DescricaoTitulo">@todasAtividades.DescricaoTitulo</div>
                                                        <div class="panel-body">@todasAtividades.DescricaoAtividade</div>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        foreach (var atividadesFeitas in Model.atividadesFeitas)
                                        {
                                            <script>
                                                $(document).ready(function () {
                                                    $("#@atividadesFeitas.Atividade.IdAtividade").removeClass("panel-red").addClass("panel-green");
