                        </li>
                    </ul>
                    <div class="collapse nav navbar-nav nav-collapse slide-down" id="nav-collapse2">
                        @using (Html.BeginForm("Login", "Aluno", FormMethod.Post, new { @class = "navbar-form navbar-right form-inline" }))
                        {
                            <div class="form-group">
                                @Html.LabelFor(x => x.Usuário, new { @class = "sr-only" })
                                @Html.TextBoxFor(x => x.Usuário, new { @class = "form-control", placeholder = "USUÁRIO", required = "required" })
                                @Html.ValidationMessageFor(x => x.Usuário)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Senha, new { @class = "sr-only" })
                                @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeholder = "SENHA", required = "required" })
                                @Html.ValidationMessageFor(x => x.Senha)
                            </div>
                            <button type="submit" class="btn btn-success">LOGIN</button>
                        }
                        @*</form>*@
                    </div>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container -->
        </nav><!-- /.navbar -->
