@model USJT.Sigma.Model.Aluno

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <!--Importamos os scripts do JQuery-->
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>

    <!--Importamos os scripts do Bootstrap-->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--Importamos as bibliotecas de CSS-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.yeti.min.css" rel="stylesheet" />
    @*<link href="~/Content/padrao.css" rel="stylesheet" />*@
    <link href="~/Content/estilo.css" rel="stylesheet" />

    @*Inserimos o logo das Abas*@
    @*<link href="~/Content/Images/img_LogoAba.png" rel="shortcut icon" />*@

</head>
<body>
    @*<header>*@
    @*<img src="~/Content/Images/img_LogoPrincipal.png" title="Logotipo da Empresa" />*@

    @*<hgroup class="text-center text-uppercase">
                <h1>Login</h1>
                <h3>Sigma</h3>
            </hgroup>
        </header>*@

    @* INSERIMOS AS MENSAGENS *@
    <section>
        @{
            if (TempData["Mensagem"] != null)
            {
                @Html.Partial("_PartialMensagem")
            }
        }
    </section>

    <div class="jumbotron jumb-login">
        <div class="row">
            <div class="col-md-12 col-sm-12 linhaCinza">
                <div class="page-header text-center">
                    <h1>SIGMA <small>Sistema de ensino em estátiscica</small></h1>
                </div>
            </div>
        </div>

        @*<hgroup class="text-center text-uppercase">
            <h1>Sigma</h1>
            <h3>Login</h3>
        </hgroup>*@

        <div class="row text-center div-log" >
            <h1>SIGMA</h1>
        </div>

        <section class="container">
            <fieldset>
                <h3>Informe seus dado:</h3>

                @using (Html.BeginForm())
            {
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-6 form-group">
                            @Html.LabelFor(x => x.Usuário, new { @class = "div-log" })
                            @Html.TextBoxFor(x => x.Usuário, new { @class = "form-control", placeholder = "Usuário", required = "required" })
                            @Html.ValidationMessageFor(x => x.Usuário)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-6 form-group">
                            @Html.LabelFor(x => x.Senha, new { @class = "div-log" })
                            @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeholder = "Senha", required = "required" })
                            @Html.ValidationMessageFor(x => x.Senha)
                        </div>
                    </div>

                    <div class="form-group btn-lg">
                        <input type="submit" name="logar" id="logar" value="Logar" class="btn btn-lg btn-success" />
                    </div>
                }

            </fieldset>
        </section>
    </div>

    <footer>
        <div class="jumbotron footer-Jumb" >
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-4 bordalinha">
                        <h5>Nossa missão</h5>
                    </div>
                    <div class="col-md-4 col-sm-4 bordalinha">
                        <h5>Contato</h5>
                    </div>
                    <div class="col-md-4 col-sm-4 bordalinha">
                        <h5>Sigma imagens</h5>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-sm-4 bordalinha">
                        <a href="#"><h5>link Nossa missão</h5></a>
                    </div>
                    <div class="col-md-4 col-sm-4 bordalinha">
                        <a href="#"><h5>link Contato</h5></a>
                    </div>
                    <div class="col-md-4 col-sm-4 bordalinha">
                        <img src="~/Content/img/sigma.png" class="img-rounded">
                    </div>
                </div>

                <div class="row">
                    <hr style="width: 100%; color: black; height: 1px; background-color:black;" />
                    <div class="col-md-12 col-sm-12">
                        <p>&copy; Todos os direitos reservados ao<strong>SIGMA</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @*<footer>
            <nav class="nav nav-tabs" >
                <div class="container text-center text-uppercase">
                    <p>&copy; Todos os direitos reservados ao<strong>SIGMA</strong></p>
                </div>
            </nav>
        </footer>*@

</body>
</html>
