@model USJT.Sigma.Model.Aluno

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <!--Importamos os scripts do JQuery-->
    <script src="~/scripts/jquery-3.1.0.min.js"></script>
    <script src="~/scripts/jquery.maskedinput.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/scripts/bootbox.min.js"></script>
    @*dns*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <!--Importamos os scripts do Bootstrap-->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--Importamos as bibliotecas de CSS-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap.yeti.min.css" rel="stylesheet" />*@
    <link href="~/Content/estilocss/estilo.css" rel="stylesheet" />
    <!--bootstrap social button-->
    <link href="~/Content/bootstrap_social_button/bootstrap-social.css" rel="stylesheet" />
    <link href="~/Content/bootstrap_social_button/assets/css/font-awesome.css" rel="stylesheet" />
</head>
<body class="body-margem-top">

    @* INSERIMOS AS MENSAGENS *@
    <section>
        @{
            if (TempData["Mensagem"] != null)
            {
                @Html.Partial("_PartialMensagem")
            }
        }
    </section>

    <!--menu -->
    <nav class="navbar navbar-default navbar-fixed-top nav-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#menu-navegacao" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--logo sigma-->
                <a class="navbar-brand menu-nav-brand" href="#">
                    <img alt="Brand" src="~/Content/img/logo100p.png">
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="menu-navegacao">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#sobre">Sobre</a></li>

                    <li>
                        <a role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            Login
                        </a>
                        <div class="collapse " id="collapseExample">
                            <div class="well">
                                <div class="row ">
                                    @using (Html.BeginForm())
                                    {
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group">
                                                @Html.LabelFor(x => x.Usuário, new { @class = "login-usuario" })
                                                @Html.TextBoxFor(x => x.Usuário, new { @class = "form-control", placeholder = "Usuário", required = "required" })
                                                @Html.ValidationMessageFor(x => x.Usuário)
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group">
                                                @Html.LabelFor(x => x.Senha, new { @class = "login-usuario" })
                                                @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeholder = "Senha", required = "required" })
                                                @Html.ValidationMessageFor(x => x.Senha)
                                            </div>
                                        </div>
                                        <input type="submit" name="logar" id="logar" value="Logar" class="btn btn-lg btn-info" />
                                    }
                                </div>
                            </div>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!--// menu-->
    <!--slider-->
    <div class="container-fuil">
        <div id="carrocel" class="divslider">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/Content/img/slider/slider1_1360-600.png" alt="First slide">

                    </div>
                    <div class="item">
                        <img src="~/Content/img/slider/slider2_1360-600.png" alt="Second slide">

                    </div>
                    <div class="item">
                        <img src="~/Content/img/slider/slider3_1360-600.png" alt="Second slide">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--// slider-->
    <!--sobre-->
    <section id="sobre">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="page-header text-center">
                        <br />
                        <br />
                        <h1>MAIS SOBRE O SIGMA</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <h4><strong>MISSÃO</strong></h4>
                    <p>texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto</p>
                    <p>texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto</p>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <h4><strong>VALORES</strong></h4>
                    <p>texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto</p>
                    <p>texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto</p>
                </div>
            </div>
            <!--img sobre-->
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div><img src="~/Content/img/sobre/sobre_1600-400.png" class="img-responsive grayscale" /></div>
                </div>
            </div>
        </div>
    </section>
    <!--//sobre-->
    <footer>
        <div class="page-header text-center">
            <h2>Apredizagem em estatística.</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <img src="~/Content/img/logo100p.png" class="img-rounded">
                    <p>&copy; Todos os direitos reservados ao<strong> SIGMA</strong></p>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center">
                    <br />
                    <br />
                    <a class="btn btn-social-icon btn-facebook  btn-lg">
                        <span class="fa fa-facebook"></span>
                    </a>
                    <a class="btn btn-social-icon btn-twitter  btn-lg">
                        <span class="fa fa-twitter"></span>
                    </a>
                    <a class="btn btn-social-icon btn-google  btn-lg">
                        <span class="fa fa-google"></span>
                    </a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
